# Kodi Configuration
KODI_HOST=192.168.1.100
KODI_PORT=8080
KODI_USERNAME=your_kodi_username
KODI_PASSWORD=your_kodi_password

# MCP Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
MCP_SERVER_NAME=kodi-controller

# Timeout and Retry Configuration
KODI_TIMEOUT=5
KODI_RETRY_ATTEMPTS=3
KODI_RETRY_DELAY=1

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Security Configuration (optional)
API_KEY=
ALLOWED_ORIGINS=*

# Downloads Configuration
KODI_DOWNLOADS_PATH=/path/to/your/downloads/directory

# Environment Configuration
ENVIRONMENT=production
